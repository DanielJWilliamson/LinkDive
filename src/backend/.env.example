# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=LinkDive
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/linkdiveai
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=linkdiveai_user
DATABASE_PASSWORD=your_secure_password
DATABASE_NAME=linkdiveai

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Keys and External Services
AHREFS_API_KEY=your_ahrefs_api_key_here
DATAFORSEO_USERNAME=your_dataforseo_username
DATAFORSEO_PASSWORD=your_dataforseo_password

# Security
SECRET_KEY=your_super_secret_key_change_this_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# API Settings
AHREFS_BASE_URL=https://api.ahrefs.com/v3
DATAFORSEO_BASE_URL=https://api.dataforseo.com/v3

# Cache Settings
CACHE_TTL_SECONDS=3600
BACKLINK_CACHE_TTL=86400
ANALYSIS_CACHE_TTL=7200

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring and Logging
SENTRY_DSN=
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_BACKGROUND_TASKS=true
ENABLE_MOCK_MODE=false

# Added (Next Steps Guide Alignment)
NEXTAUTH_SECRET=replace_me
NEXTAUTH_URL=http://localhost:3000
ALLOWED_EMAIL_DOMAIN=linkdive.ai
SERP_TOP_N=20
ENABLE_SERP_MONITORING=true
ENABLE_CONTENT_SCRAPE=false
COST_BUDGET_DAILY_USD=25
MONITOR_WINDOW_TZ=Europe/London
MONITOR_START_HOUR=7
MONITOR_END_HOUR=19
MAX_HOURLY_AHREFS_CALLS=500
MAX_HOURLY_DATAFORSEO_CALLS=500
